  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Google Drive",
      "short_name": "Drive",
      "description": "Access Google Drive files and folders",
      "url": "/google-drive",
      "icons": [
        {
          "src": "logo192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Google Sheets",
      "short_name": "Sheets",
      "description": "Manage Google Sheets documents",
      "url": "/google-sheets",
      "icons": [
        {
          "src": "logo192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "AI Dashboard",
      "short_name": "AI",
      "description": "Access AI-powered features",
      "url": "/ai-dashboard",
      "icons": [
        {
          "src": "logo192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
